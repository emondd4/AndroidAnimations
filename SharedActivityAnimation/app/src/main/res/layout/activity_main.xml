<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90E6E2E2"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mainImage"
                android:layout_margin="10dp"
                android:transitionName="mainImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dummy_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mainName"
                    android:transitionName="mainName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emon Hossain"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mainDesc"
                    android:transitionName="mainDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I am a pure introvert and a live sick fuck"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>